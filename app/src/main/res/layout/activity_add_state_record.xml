<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.testdemo.activities.AddStateRecordActivity"
        android:orientation="vertical">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/shallow_grey"
    >
        <ImageView android:layout_width="@dimen/dp_40" android:layout_height="@dimen/dp_40"
                   android:id="@+id/iv_back"
                   android:src="@drawable/ic_arrow_left"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="20dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增记录"
                android:id="@+id/tv_title"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
    >
        <RelativeLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="*"
                      android:id="@+id/star1"
                      android:layout_centerVertical="true"
                      android:textColor="@color/red"
                      android:textSize="@dimen/dp_40"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="名称"
                      android:textColor="@color/black"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="5dp"
                      android:layout_toRightOf="@+id/star1"
                      android:textSize="25sp"/>
            <EditText android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/et_name"
                      android:hint="请输入"
                      android:background="@null"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="@dimen/dp_10"/>

        </RelativeLayout>

        <RelativeLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="*"
                      android:id="@+id/star2"
                      android:layout_centerVertical="true"
                      android:textColor="@color/red"
                      android:textSize="@dimen/dp_40"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="经度"
                      android:textColor="@color/black"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="5dp"
                      android:layout_toRightOf="@+id/star2"
                      android:textSize="25sp"/>
            <EditText android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/et_longitude"
                      android:hint="请输入"
                      android:background="@null"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="@dimen/dp_10"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="*"
                      android:id="@+id/star3"
                      android:layout_centerVertical="true"
                      android:textColor="@color/red"
                      android:textSize="@dimen/dp_40"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="纬度"
                      android:textColor="@color/black"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="5dp"
                      android:layout_toRightOf="@+id/star3"
                      android:textSize="25sp"/>
            <EditText android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/et_latitude"
                      android:hint="请输入"
                      android:background="@null"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="@dimen/dp_10"/>

        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="@color/shallow_grey"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
    >
        <RelativeLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="*"
                      android:id="@+id/star4"
                      android:layout_centerVertical="true"
                      android:textColor="@color/white"
                      android:textSize="@dimen/dp_40"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="高度"
                      android:textColor="@color/black"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="5dp"
                      android:layout_toRightOf="@+id/star4"
                      android:textSize="25sp"/>
            <EditText android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/et_height"
                      android:hint="请输入"
                      android:background="@null"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="@dimen/dp_10"/>

        </RelativeLayout>

        <RelativeLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="*"
                      android:id="@+id/star5"
                      android:layout_centerVertical="true"
                      android:textColor="@color/red"
                      android:textSize="@dimen/dp_40"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="时间"
                      android:textColor="@color/black"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="5dp"
                      android:layout_toRightOf="@+id/star5"
                      android:textSize="25sp"/>
            <EditText android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/et_time"
                      android:hint="请输入"
                      android:background="@null"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="@dimen/dp_10"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="*"
                      android:id="@+id/star6"
                      android:layout_centerVertical="true"
                      android:textColor="@color/red"
                      android:textSize="@dimen/dp_40"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="类型"
                      android:textColor="@color/black"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="5dp"
                      android:layout_toRightOf="@+id/star6"
                      android:textSize="25sp"/>
            <Spinner android:layout_width="wrap_content" android:layout_height="25dp"
                     android:id="@+id/sp_class"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:layout_marginRight="@dimen/dp_10"
                     android:entries="@array/form"
                     android:spinnerMode="dropdown"/>
            <!--            <Spinner android:layout_width="wrap_content" android:layout_height="25dp"-->
            <!--                     android:id="@+id/sp_dam"-->
            <!--                     android:layout_alignParentRight="true"-->
            <!--                     android:layout_centerVertical="true"-->
            <!--                     android:entries="@array/dam"-->
            <!--                     android:spinnerMode="dropdown"/>-->
        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="@color/shallow_grey"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
    >
        <RelativeLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="*"
                      android:id="@+id/star7"
                      android:layout_centerVertical="true"
                      android:textColor="@color/white"
                      android:textSize="@dimen/dp_40"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="大坝"
                      android:textColor="@color/black"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="5dp"
                      android:layout_toRightOf="@+id/star7"
                      android:textSize="25sp"/>
            <Spinner android:layout_width="wrap_content" android:layout_height="25dp"
                     android:id="@+id/sp_dam"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:entries="@array/dam"
                     android:spinnerMode="dropdown"/>

        </RelativeLayout>

        <RelativeLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="*"
                      android:id="@+id/star8"
                      android:layout_centerVertical="true"
                      android:textColor="@color/red"
                      android:textSize="@dimen/dp_40"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="坝段"
                      android:textColor="@color/black"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="5dp"
                      android:layout_toRightOf="@+id/star8"
                      android:textSize="25sp"/>
            <Spinner android:layout_width="wrap_content" android:layout_height="25dp"
                     android:id="@+id/sp_dam_part"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:entries="@array/part"
                     android:spinnerMode="dropdown"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="@color/shallow_grey"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="horizontal"
    >
        <RelativeLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="*"
                      android:id="@+id/star9"
                      android:layout_centerVertical="true"
                      android:textColor="@color/white"
                      android:textSize="@dimen/dp_40"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="照片："
                      android:layout_marginTop="@dimen/dp_10"
                      android:id="@+id/tv_photo"
                      android:textColor="@color/black"
                      android:layout_marginLeft="5dp"
                      android:layout_toRightOf="@+id/star9"
                      android:textSize="25sp"/>
            <RelativeLayout android:layout_width="200dp" android:layout_height="200dp"
                            android:layout_below="@+id/tv_photo"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/dash_line">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@drawable/ic_add"
                           android:id="@+id/iv_add_photo"
                           android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="*"
                      android:id="@+id/star10"
                      android:layout_centerVertical="true"
                      android:textColor="@color/white"
                      android:textSize="@dimen/dp_40"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="视频："
                      android:layout_marginTop="@dimen/dp_10"
                      android:id="@+id/tv_video"
                      android:textColor="@color/black"
                      android:layout_marginLeft="5dp"
                      android:layout_toRightOf="@+id/star10"
                      android:textSize="25sp"/>
            <RelativeLayout android:layout_width="200dp" android:layout_height="200dp"
                            android:layout_below="@+id/tv_video"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/dash_line">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@drawable/ic_add"
                           android:id="@+id/iv_add_video"
                           android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_marginTop="20dp"
          android:background="@color/shallow_grey"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="*"
                  android:id="@+id/star11"
                  android:layout_centerVertical="true"
                  android:textColor="@color/white"
                  android:textSize="@dimen/dp_40"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="备注："
                  android:layout_marginTop="@dimen/dp_10"
                  android:id="@+id/tv_remark"
                  android:textColor="@color/black"
                  android:layout_marginLeft="5dp"
                  android:layout_toRightOf="@+id/star11"
                  android:textSize="25sp"/>
        <EditText android:layout_width="match_parent" android:layout_height="150dp"
                  android:hint="请输入"
                  android:textAlignment="textStart"
                  android:layout_below="@+id/tv_remark"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:padding="@dimen/dp_10"
                  android:background="@drawable/dash_line_grey"
                  android:layout_marginTop="@dimen/dp_10"
                  android:gravity="start"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerInParent="true"
                      android:orientation="horizontal">
            <Button android:layout_width="150dp" android:layout_height="60dp"
                    android:id="@+id/auto_fill"
                    android:text="自动填入"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/blue_shallow"
                    android:layout_gravity="center"/>
            <Button android:layout_width="150dp" android:layout_height="60dp"
                    android:id="@+id/submit"
                    android:text="新增"
                    android:textSize="25dp"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/blue_shallow"
                    android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>